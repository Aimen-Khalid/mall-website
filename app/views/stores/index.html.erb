<style>
.main-stores-container{
  font-family:'VisbyCF-Medium';
}
.main-stores-container h2{
  text-align:center;
  margin-top:20px;
  margin-bottom:20px;
  color: black;
}
.store-logo{
  height:150px;
  padding:20px;
  margin-top:30px;
}
.logo-container{  
background: #FFFFFF;
box-shadow: 0px 10px 4px rgba(0, 0, 0, 0.25);
border-radius: 30px;
width: 300px;
height:200px;
margin:60px;
position: relative;
transition: transform 0.5s;
}
.stores-container{
  padding: 20px;
  padding-left:200px;
  padding-right:200px;
  margin-bottom: 50px;
  background: #3D0000;
  /* background: rgb(195,34,34); */
  background: linear-gradient(0deg, #801336 10%, #C72C41 82%);
  /* border-radius: 30px; */

}
.overlay
{
  display: block;
  position: absolute;
  top: 7%;
  width: 70px;
  margin-left:0px;
  opacity:0;
}
.logo-container:hover .overlay{
  opacity:1;
  margin-left:5%;
  transition:0.5s;
}
.logo-container:hover{
  transform: translateY(-10px);
}
.overlay .fa { 
cursor: pointer; 
background-color: #0000; 
color: #0000; 
height: 35px; 
width: 35px; 
font-size: 20px; 
padding: 7px; 
margin: 2%; 
margin-bottom: 5%; 
} 
.overlay .btn-secondary { 
  background: transparent !important; 
  border: none !important; 
  box-shadow: none  !important! 
  color: #0000; 
} 
.add-store-btn {
	color: #FFFFFF;
	font-size: 16px;
	border-radius: 5px;
	border: solid 0px #3e2e2e;
	text-shadow: 1px 1px 0px #a3a3a3;
	box-shadow: 0px 10px 14px -7px #616174;
	text-decoration: none;
	cursor: pointer;
	position: relative;
	overflow: hidden;
	background: linear-gradient(180deg, #000000 10%, #27bd22 100%);
	display: inline-flex;
	align-items: center;
	padding: 0;
  margin-bottom: 50px;
}
.add-store-btn:hover {
	background: linear-gradient(180deg, #27bd22 10%, #000000 100%);
}
.add-store-btn-text {
	position: relative;
	padding: 10px 18px;
  font-size:20px;
}
.add-store-btn-icon {
	position: relative;
	border-right: 1px solid #ffffff29;
	box-shadow: inset rgb(0 0 0 / 14%) -1px 0 0;
	padding: 10px 10px;
 
}
#new-store{
  text-decoration:none;
}
</style>
<div class=main-stores-container>
    <h2>SHOP BY STORE</h2>
    <div class="stores-container">
      <div class="row">
        <% @stores.each do |store| %>
          <div class="col-4 text-center logo-container mb-8">
              <a href="<%= url_for(store_products_path(store)) %>"> <%= image_tag store.logo, class: "store-logo" %></a>
              <div class="overlay">
                <a href="<%= url_for(store_path(store)) %>"> <button type="button" class="btn btn-secondary" title="View Details"><i class="fa-solid fa-circle-info" style="color:black;"></i></button></a>
                <%if user_signed_in? and current_user.user_type=="Admin"%>
                  <a href="<%= url_for(edit_store_path(store)) %>"><button type="button" class="btn btn-secondary" title="Edit Store Details"><i class="fa-solid fa-pen-to-square" style="color:black;"></i></button></a>
                  <form action="<%= url_for(store_path(store)) %>" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button type="submit" class="btn btn-secondary" title="Delete Store">
                      <i class="fa-sharp fa-solid fa-trash" style="color:black;"></i>
                    </button>
                  </form>
                <%end%>
              </div>
          </div>
        <% end %>
      </div>

    </div>
  <div class="text-center">
  <a href="<%= url_for(new_store_path)%>" id="new-store"><button type="button" class="add-store-btn">
    <span class="add-store-btn-icon">
      <i class="fa fa-plus"></i>
    </span>
    <span class="add-store-btn-text">
      <span>Add New Store</span>
    </span>
  </button><a>
  </div>
  
</div>
<%= render 'shared/footer' %>
